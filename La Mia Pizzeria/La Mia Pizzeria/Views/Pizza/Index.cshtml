<div class="container mt-5 ">
    <div class="row my-5">
        
        <div class="col-12 text-center text-white">
            <h2 >Lista delle Pizze</h2>
        </div>
        

    </div>
    <div id="cards_container" class="row row-cols-2 row-cols-3 row-cols-4">
        




    </div>

</div>

@section Scripts{
        axios.get("https://localhost:7017/api/PizzaApi/GetPizza").then((result) =>{

        const listPizzas = result.data;

        

            listPizzas.forEach(pizza =>{
                document.getElementById("cards_container").innerHTML += `

                <div class="col col-4  p-3">
                    <div class="card h-100 text-bg-dark text-center ">
                        
                        <img src="${pizza.imgSource}" class="card-img-top square" alt="pizza coi funghi">
                        
                        <div class="card-body">
                            
                            <h5 class="card-title">${pizza.name}</h5>
                            <p class="card-text ">${pizza.description}</p>

                        </div>
                        
                        <div class="card-footer bg-transparent border-dark pb-5 align-content-center my-2">
                            
                            <h4>Prezzo :${pizza.price} €</h4>
                            
                            <a class="btn btn-info btn-sm mx-2" href="/Home/Details/${pizza.id}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-zoom-in" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                                    <path d="M10.344 11.742c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1 6.538 6.538 0 0 1-1.398 1.4z" />
                                    <path fill-rule="evenodd" d="M6.5 3a.5.5 0 0 1 .5.5V6h2.5a.5.5 0 0 1 0 1H7v2.5a.5.5 0 0 1-1 0V7H3.5a.5.5 0 0 1 0-1H6V3.5a.5.5 0 0 1 .5-.5z" />
                                </svg>
                            </a>


                        </div>
                    
                    </div>
                </div>

                    `})
            }).catch((error) => {
                console.error("Errore!");
            });

}