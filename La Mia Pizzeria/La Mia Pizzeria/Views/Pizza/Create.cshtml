@using La_Mia_Pizzeria.Models.ModelForView;
@model PizzaListCathegory


<div class="container">

    <div class="row ">

        <div class=" col-2">
            <h1 class="mb-3">Aggiungi una nuova Pizza.</h1>

            <form asp-controller="Pizza" asp-action="Create" method="post" class="row g-3">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label"> Name </label>
                    <input asp-for="@Model.Pizze.Name" type="text" class="form-control" id="formGroupExampleInput" placeholder="Example input placeholder">
                    <span asp-validation-for="@Model.Pizze.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="formGroupExampleInput2" class="form-label"> Description </label>
                    <input asp-for="@Model.Pizze.Description" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input placeholder">
                    <span asp-validation-for="@Model.Pizze.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="formGroupExampleInput2" class="form-label"> imgSource </label>
                    <input asp-for="@Model.Pizze.ImgSource" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input placeholder">
                    <span asp-validation-for="@Model.Pizze.ImgSource" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="formGroupExampleInput2" class="form-label"> Price </label>
                    <input asp-for="@Model.Pizze.Price" type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input placeholder">
                    <span asp-validation-for="@Model.Pizze.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <strong>Categoria:</strong>
                    <select asp-for="@Model.Pizze.CathegoryId" rows="10" class="d-block w-100">
                        <option value=""></option>
                        @foreach (CathegoryModel categoria in Model.Categorie)
                        {
                            @if (Model.Pizze.CathegoryId == categoria.Id)
                            {
                                <option value="@categoria.Id" selected>@categoria.Name</option>
                            }
                            else
                            {
                                <option value="@categoria.Id">@categoria.Name</option>
                            }
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Salva</button>
            </form>
        </div>

    </div>

</div>