@using La_Mia_Pizzeria.Models.ModelForView;
@model PizzaListCathegory


<div class="container">

    <div class="row ">

        <div class=" col-2">
            <h1 class="mb-3">Modifica una Pizza.</h1>

            <form asp-controller="Pizza" asp-action="Update" method="post" asp-route-id="@Model.Pizze.Id" class="row g-3">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="@Model.Pizze.Id" class="form-label">Id Pizza</label>
                    <input asp-for="@Model.Pizze.Id" type="text" class="form-control" readonly>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Pizze.Name" class="form-label"> Name </label>
                    <input asp-for="@Model.Pizze.Name" type="text" class="form-control" required>
                    <span asp-validation-for="@Model.Pizze.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Pizze.Description" class="form-label"> Description </label>
                    <textarea asp-for="@Model.Pizze.Description" type="text" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Pizze.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Pizze.ImgSource" class="form-label"> imgSource </label>
                    <input asp-for="@Model.Pizze.ImgSource" type="text" class="form-control" required>
                    <span asp-validation-for="@Model.Pizze.ImgSource" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Pizze.Price" class="form-label"> Price </label>
                    <input asp-for="@Model.Pizze.Price" type="number" class="form-control" required>
                    <span asp-validation-for="@Model.Pizze.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <strong>Categoria:</strong>
                    <select asp-for="@Model.Pizze.CathegoryId" title="categorie" rows="10" class="d-block w-100">
                        <option value=""></option>
                        @foreach (CathegoryModel categoria in Model.Categorie)
                        {
                            if (Model.Pizze.CathegoryId == categoria.Id)
                            {

                                <option value="@categoria.Id" selected="@(Model.Pizze.CathegoryId == categoria.Id ? "selected" : null)">@categoria.Name</option>
                            }
                            else
                            {
                                <option value="@categoria.Id">@categoria.Name</option>

                            }
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Salva</button>
            </form>
        </div>

    </div>

</div>